{
  "name": "storm-monorepo",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun --cwd packages/web run dev",
    "build:web": "bun --cwd packages/web run build",
    "dev:server": "bun --cwd packages/server run dev",
    "dev:agent1": "bun --cwd packages/agent run dev:agent1",
    "dev:agent2": "bun --cwd packages/agent run dev:agent2",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:agent1\" \"bun run dev:agent2\" \"bun run dev:web\""
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2"
  }
}